@model IEnumerable<SIMAS.Models.Noticias>
@{
    Layout = "_Layout";
}

<link rel="stylesheet" href="css/lightbox.min.css">
<link rel="stylesheet" href="css/galeria.css">


<section class="section-titulo">
    <h1 class="encabezado">Galeria SIMAS </h1>
    <hr class="linea-titulo-abajo">
</section>
<section class="galeria">

    @*<a href="img/1.jpg" data-lightbox="roadtrip">
            <img src="img/1.jpg" alt="">
        </a>*@

    @foreach (var item in Model)
        {
           <a href="/noticias/@(item.IdNoticias).jpg" data-lightbox="roadtrip">
              <img src="~/noticias/@(item.IdNoticias).jpg">
           </a>
        }

</section>


