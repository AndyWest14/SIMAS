@model SIMAS.Models.Noticias
@{
    Layout = "_Layout";
}


<link rel="stylesheet" href="~/css/lightbox.min.css">
<link rel="stylesheet" href="~/css/infonoticia.css">

<section style=" height: 200px;">
    <hr class="linea-titulo">
    <h1 class="encabezado">@Model.Encabezado</h1>
        <hr class="linea-titulo-abajo">
</section>
<section class="noticia">
    <div class="container">
        <img class="img-noticia" src="~/noticias/@(Model.IdNoticias).jpg">
        <p class="autor-noticia">@Model.Autor</p>
        <p class="fecha-noticia">@Model.Fecha</p>
        <p class="texto-noticia">
           @Model.Cuerpo
        </p>
    </div>
</section>


<section class="galeria">
    <a href="img/1.jpg" data-lightbox="roadtrip">
        <img src="~/img/1.jpg" alt="">
    </a>
    <a href="img/2.jpg" data-lightbox="roadtrip">
        <img src="~/img/2.jpg" alt="">
    </a>
</section>

<section class="video">
    <div class="container">
        <div class="embed-responsive embed-responsive-16by9">
            <iframe width="560" height="315" src="@Model.VideoUrl" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
    </div>
</section>


<script src="~/js/lightbox-plus-jquery.min.js"></script>
<script src="~/js/lightbox.min.js"></script>
<script src="~/js/app.js"></script>
