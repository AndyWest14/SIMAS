@model IEnumerable<SIMAS.Models.Categorias>
@{
    Layout = "_Layout";
}

<link rel="stylesheet" href="../css/transparenciacategoria.css">


<section style="height: 200px;">
    <h1 class="encabezado">Transparencia LGCG</h1>
    <hr class="linea-titulo-abajo">
</section>
<section class="text">
    <div class="primer-texto">
        <p>Aquí se presenta toda la información aplicable a nuestro organismo bajo la Ley General de Contabilidad Gubernamental</p>
    </div>
    <section class="categorias">
        <div class="listas">
            <h1 class="nombrecategoria">Ley de disciplina financiera</h1>
            <hr class="linea-nombre-abajo">
            <ul style="list-style: none;">

                @foreach (var item in Model)
                {
                   <li><a href="~/TransparenciaLGCGArchivos/@item.IdCategoria">@item.Nombre</a></li>
                }
            </ul>
        </div>
    </section>

</section>
