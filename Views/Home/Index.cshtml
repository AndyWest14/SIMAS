
@{
    Layout = "_Layout";
}

<link rel="stylesheet" href="../css/inicio.css">

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <a href="https://coronavirus.gob.mx/" target="_blank" ><img class="d-block w-100" src="~/img/slider1.jpg" target="_blank" alt="First slide"></a>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/img/slider2.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/img/slider3.jpg" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


<section class="container">
    <div class="buzon">
        <h2>Contacta con nosotros</h2>
        <p>Si tienes alguna sugerencia o comentario, por favor háznoslo saber! Tu opinión es importante para nosotros</p>
        <a href="~/Contacto" class="btn btn-light topmargin-sm">Contactar</a>
    </div>
</section>

<section class="cards" style="background-color: #246eb9;">
    <div class="content">
        <div class="card">
            <div class="icon">
                <i class="fas fa-question material-icons md-36"></i>
            </div>
            <p class="title">Preguntas frecuentes</p>
            <a class="text" href="~/PreguntasFrecuentes">Click aquí</a>
        </div>

        <div class="card">
            <div class="icon">
                <i class="fas fa-phone-volume material-icons md-36"></i>
            </div>
            <p class="title">Reportar una fuga</p>
            <a class="text" href="~/ReportarFuga">Click aquí</a>

        </div>

        <div class="card">
            <div class="icon">
                <i class="fas fa-file-invoice-dollar  material-icons md-36"></i>
            </div>
            <p class="title">Conoce tu recibo</p>
            <a class="text" href="~/Recibo">Click aquí</a>
        </div>

        <div class="card">
            <div class="icon">
                <i class="fas fa-stopwatch material-icons md-36"></i>
            </div>
            <p class="title">Aprende a leer tu medidor</p>
            <a class="text" href="~/LeerMedidor">Click aquí</a>

        </div>

        <div class="card">
            <div class="icon">
                <i class="fas fa-newspaper material-icons md-36"></i>
            </div>
            <p class="title">Noticias</p>
            <a class="text" href="~/Noticias">Click aquí</a>
        </div>

    </div>
</section>


