@model SIMAS.Areas.Administrador.Models.CategoriasViewModel
@{
    Layout = "~/Areas/Administrador/views/Shared/_LayoutAdmin.cshtml";
}


<link rel="stylesheet" href="~/css/agregar.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css">
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/rowreorder/1.2.7/css/rowReorder.dataTables.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.6/css/responsive.dataTables.min.css">
<link href='https://cdn.jsdelivr.net/npm/boxicons@2.0.5/css/boxicons.min.css' rel='stylesheet'>



<div class="card mb-3" id="card-admin" style="margin-top: 10%;">
    <div class="card-header">
        <h3> <i class="fas fa-plus"></i> <span>Añadir categoria LGCG</span></h3>
    </div>
    <div class="card-body">
        <form action="~/Administrador/Categorias/AgregarCategoria" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="exampleInputEmail1">Nombre de la categoria</label>
                <input class="form-control" asp-for="Nombre" name="Nombre" type="text" id="name" aria-describedby="name">
            </div>

            @Html.ValidationSummary()

            <input type="submit" class="btn btn-primary" value="Agregar">
            <a class="btn btn-primary" href="~/Administrador/Categorias">Cancelar</a>

        </form>
    </div>
</div>