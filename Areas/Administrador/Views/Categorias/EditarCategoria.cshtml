@model SIMAS.Areas.Administrador.Models.CategoriasViewModel
@{
    Layout = "~/Areas/Administrador/views/Shared/_LayoutAdmin.cshtml";
}

<link rel="stylesheet" href="~/css/agregar.css">

<div class="card mb-3" id="card-admin" style="margin-top: 10%;">
    <div class="card-header">
        <h3> <i class="fas fa-edit"></i> <span>Editar categoria LGCG</span></h3>
    </div>
    <div class="card-body">
        <form action="~/Administrador/Categorias/EditarCategoria" method="post">
            <input type="hidden" asp-for="IdCategoria" />
            <div class="form-group">
                <label for="exampleInputEmail1">Nombre de la categoria</label>
                <input class="form-control" asp-for="Nombre" name="Nombre" type="text" id="name" pattern="^[a-zA-ZáéíóúÁÉÍÓÚñÑ0-9 ]+$" title="El nombre de la categoria no puede contener caracteres especiales." aria-describedby="name">
            </div>

            @Html.ValidationSummary()


            <input type="submit" class="btn btn-primary" value="Editar" />
            <a class="btn btn-primary" href="~/Administrador/Categorias">Cancelar</a>
        </form>
    </div>
</div>