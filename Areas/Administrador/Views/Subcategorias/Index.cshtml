@model IEnumerable<SIMAS.Models.Subcategorias>
@{
    Layout = "~/Areas/Administrador/Views/Shared/_LayoutAdmin.cshtml";
}

<link rel="stylesheet" href="~/css/admindocumentos.css">
<link rel="apple-touch-icon" sizes="180x180" href="icons/apple-touch-icon.png">
<link rel="icon" type="image/png" sizes="32x32" href="icons/favicon-32x32.png">
<link rel="icon" type="image/png" sizes="16x16" href="icons/favicon-16x16.png">
<link rel="manifest" href="icons/site.webmanifest">
<link rel="mask-icon" href="icons/safari-pinned-tab.svg" color="#5bbad5">
<meta name="msapplication-TileColor" content="#ffffff">
<meta name="theme-color" content="#ffffff">
<script src="https://kit.fontawesome.com/c1a10add69.js" crossorigin="anonymous"></script>
<link rel="stylsheet" type="text/css" href="https://fonts.googleapis.com/icon?family=Material+Icons">

<div class="card mb-3" style="margin-top: 10%; padding: 0px;">
    <div class="card-header">

        <h3>Lista de subcategorias LGCG</h3>
        <a href="~/Administrador/AgregarSubcategoria"> <i class="fas fa-plus"></i> <span>Añadir una subcategoria</span></a>
    </div>
    <div class="card-body">
        <table id="example" class="table display row-border cell-border table-striped" style="width: 100%;">
            <thead>
                <tr>
                    <th>Nombre subcategoria</th>
                    <th>Categoria</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th>@item.Nombre</th>
                        <th>@item.IdCategoriaNavigation.Nombre</th>
                        <th>
                            <a href="~/Administrador/EditarSubcategoria/@item.Idsubcategorias" class="a-edit">
                                <i class="fas fa-pen"></i>
                            </a>
                            <a href="javascript:eliminar(@item.Idsubcategorias)" class="a-delete">
                                <i class="fas fa-trash"></i>
                            </a>
                        </th>
                    </tr>
                }
            </tbody>
        </table>

        <form method="post" action="~/Administrador/Subcategorias/EliminarSubcategoria">
            <input name="id" id="idSubCat" type="hidden" />
        </form>

        <script>
            function eliminar(idSubCat) {
                document.getElementById("idSubCat").value = idSubCat;
                if (confirm('¿Desea eliminar esta subcategoria?')) {
                    document.forms[0].submit()
                };
            }
        </script>

    </div>
</div>
